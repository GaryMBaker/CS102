@require 'blink.styl'
@require 'container.styl'
@require 'footer.styl'
@require 'logo-animation.styl'
@require 'maps.styl'
@require 'navigation.styl'
@require 'resets.styl'
@require 'slider.styl'



.red p
	margin 0

.welcome 
	width 75em
	overflow hidden
	margin 4em auto
	z-index 1

.about 
	margin 4em auto 4em
	z-index 0

.about h3
	text-align center

.red 
	width 75em
	overflow hidden
	margin 10em auto 6em

.parallax 
	z-index 1
	height 120px
	width 400px
	display block
	position absolute
	margin 0 auto
	text-align center
	padding 0.4em
	left 0
	right 0
	
	
.parallax h3, .parallax h1 
	font-family 'Righteous' 
	text-shadow 8px 8px 12px black
	text-transform uppercase
	color white
	-webkit-text-stroke: 1px black;

.contact-form 
	background white
	height 100%
	width 75em
	margin 4em auto
	border-radius 7px
	box-shadow 7px 7px 7px #555
	padding 1em


.my-slider 
	width 75em
	margin 1em auto 10em
	height 480px
	border-radius 7px
	box-shadow inset 0px 0px 7px 4px #555
	
.unslider-arrow 
	bottom 800px
	background lightblue
	padding 1em 2em
	border-radius 7px
	box-shadow inset 0px 0px 7px 4px #555
	text-transform uppercase
	color black
	border 1px solid lightblue
	
.unslider-arrow:hover
	border 1px solid black
	
.vertical-strip
	width 120px
	height 100vh
	background darkgrey
	display block
	position fixed
	top 0px
	left 0px
	z-index -2
	box-shadow inset 0px 0px 14px 4px #555
	
.horizontal-strip
	margin-left 0px
	margin-right 0px
	display block
	position static
	text-align center
	text-decoration underline
	padding 1.8em
	border-radius 7px

.content 
	width 75em
	overflow hidden
	margin 4em auto
	padding 1em 2em
	box-shadow inset 0em 0em 3em 4px #555
	border-radius 7px
	outline 1px  dashed #2f4f4f
	outline-offset 6px
	-moz-outline-radius 9px 
	
.content h3 {
	color: white
	text-shadow:    0 1px 0 #ccc,
	                0 2px 0 #c9c9c9,
	                0 3px 0 #bbb,
	                0 4px 0 #b9b9b9,
	                0 5px 0 #aaa,
	                0 6px 1px rgba(0,0,0,.1),
	                0 0 5px rgba(0,0,0,.1),
	                0 1px 3px rgba(0,0,0,.3),
	                0 3px 5px rgba(0,0,0,.2),
	                0 5px 10px rgba(0,0,0,.25),
	                0 10px 10px rgba(0,0,0,.2),
	                0 20px 20px rgba(0,0,0,.15);
}

.content p {
	text-shadow:    -0.8px -0.8px 0px rgba(255,255,255,0.3), 
					0.8px 0.8px 0px rgba(0,0,0,0.8);
}

ul li h3 a {
	text-decoration none
	color black
}

ul li h3 a:hover {
	text-decoration underline
	color black
}

/* beginning of media queries */	
@media (min-width: 1024px) and (max-width: 1300px) {
  .my-slider {
    max-width: 50em;
    border-radius: 7px;
  }
  	
  .content, .gmaps, #map, .red, .welcome, .about, .cont, .logo-container {
   	width: 50em;
   }
}

@media (min-width: 768px) and (max-width: 1024px) {
  .my-slider {
    max-width: 38em;
    border-radius: 7px;
  }
  	
  .content, .gmaps, #map, .red, .welcome, .about, .cont, .logo-container {
   	width: 38em;
   }
   
   .cont ul li h3 {
		text-align: center;
		font-size: 20px;
	}
}

	/* End of CSS Media-Queries */
		

.cont #accordion div
	background #EBECE4
	border none
	
	

.cont #accordion h3
	background #333
	
.cont #accordion h3 a 
	text-decoration:none;
	border:0;
	outline:none;
	color white

	
	
	
header ul li ul form
	bottom 0
	color black
	
.alt
	right 1em
	width 200px
	height 400px
	display block
	padding 1em
	color white

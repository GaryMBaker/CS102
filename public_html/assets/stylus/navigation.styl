
header 
	width 100%
	background #333
	height 60px
	padding-right 1.8em
	padding-left 1.8em
	text-transform uppercase
	z-index 4
	top 0px
	margin-top 0px
	margin-bottom 0px


.sticky 
	top 0
	width 100%
	position fixed !important

ul 
	width 100%
	display flex
	margin 0
	padding 0

header ul 
	float right
	width 35%

header h3 
	text-decoration underline
	color white
	float left
	font-weight normal
	margin-top 0.5em;
	text-shadow 5px 5px 4px #000

b 
	font-weight bolder

ul li 
	align-items space-around
	display inline-block
	width 100%

header ul li a
	width 100%
	height 60px
	display block
	padding-top 18px
	text-align center
	font-size 0.8rem
	text-shadow black 6px 6px 4px
	font-family Verdana
	color white
	background #333

header ul li a:hover 
	background #111
	text-decoration underline

.active 
	text-decoration underline

header ul li ul
	display none
	z-index -10
	position absolute
	width 120px
	overflow auto
	background #333
	margin-bottom 1em
	opacity 0
	transition: opacity 0.3s;
	transition-timing-function cubic-bezier(.17,.67,.83,.67)

	
header ul li:hover ul 
	display block
	opacity 1
	
header ul li ul li 
	float left
	width 120px
	margin 0 auto
	
header ul li ul li a
	height 80px
	
header ul li ul form input[type=submit]
	width 80%

.logo-container 
	width 75em
	margin 0 auto
	
.logo-row 
	flex 1
	margin 0em auto
	padding 2em
	display flex
	align-items space-around

.logo 
	flex 1
	float left
	position relative
	perspective 140px

.logo img 
	flex 1
	width 100%
	zoom 100%
	transform rotateZ(-30deg) rotateY(-10deg)
	transition transform 0.8s
	transition-timing-function cubic-bezier(.1,.65,.79,.21)
	shape-rendering crispEdges

.logo img:hover 
	transform rotateZ(10deg) rotateY(20deg)
